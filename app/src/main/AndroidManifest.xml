<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.luxeviewresort">

    <!-- Internet Permission (if API calls are needed) -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LuxeViewResort"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!-- Main Activity (Launcher) -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="false"/>

        <!-- Register Activity -->
        <activity android:name=".activities.RegisterActivity"
            android:exported="false"/>

        <!-- Home Activity -->
        <activity
            android:name=".activities.HomeActivity"
            android:exported="false"/>

        <!-- Profile Activity -->
        <activity
            android:name=".activities.ProfileActivity"
            android:exported="false"/>

        <!-- Room Booking Activity -->
        <activity
            android:name=".activities.RoomBookingActivity"
            android:exported="false"/>

        <!-- Room Details Activity -->
        <activity
            android:name=".activities.RoomDetailsActivity"
            android:exported="false"/>

        <!-- Service Reservation Activity -->
        <activity
            android:name=".activities.ServiceReservationActivity"
            android:exported="false"/>

    </application>
</manifest>
